  <script type="text/javascript">

      document.acctribe.phone.focus()

      var bundle_type = null

      const user_data = <%-user_data%>

      const base_url = window.location.origin
      const stk_btn = document.querySelector('#stk_process')
      const offer_btn = document.querySelectorAll('.task_offer')
      const modal_tt = document.querySelector('#bundle_type')

    

      stk_btn.addEventListener('click', async (e) =>{
        e.preventDefault()
        stk_btn.innerHtml = '<span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>Loading...'

        const mssidn = document.querySelector('#account').value
        const acc_name = document.querySelector('#bundle_opt').value


         const data = {
          bundle_type: bundle_type,
          user_id: acc_name,
          msisdn: mssidn
         }

        const response = await fetch(base_url + "/triggerStkPush",{
            method: 'POST', // *GET, POST, PUT, DELETE, etc.
            mode: 'cors', // no-cors, *cors, same-origin
            cache: 'no-cache', // *default, no-cache, reload, force-cache, only-if-cached
            credentials: 'same-origin', // include, *same-origin, omit
            headers: {
              'Content-Type': 'application/json'
              // 'Content-Type': 'application/x-www-form-urlencoded',
            },
            redirect: 'follow', // manual, *follow, error
            referrerPolicy: 'no-referrer', // no-referrer, *no-referrer-when-downgrade, origin, origin-when-cross-origin, same-origin, strict-origin, strict-origin-when-cross-origin, unsafe-url
            body: JSON.stringify(data) // body data type must match "Content-Type" header
          });
          const res = await response.json(); // parses JSON response into native JavaScript objects

          if (res.status == 'success') {
             stk_btn.textContent = 'success'

             let added_vars = ""

             for (const key in user_data) {
                added_vars += `&${key}=${user_data[key]}`
             }

             window.location.href = base_url + '/verify?request_id=' + res.request_id + added_vars
          }

          console.log(res)
        }
         )

     offer_btn.forEach(btn =>{
      btn.addEventListener('click', function(e){
        bundle_type = e.target.dataset.type
        modal_tt.text = bundle_type
      })
     })

     console.log(base_url)
      

  </script>

